{
  "compilerOptions": {
    "outDir": "./dist", // Directory for JavaScript files
    "declaration": true, // Generate corresponding '.d.ts' file
    "declarationDir": "./types", // Directory for definition files
    "module": "CommonJS", // CommonJS module system
    "target": "ES2016", // Compile to ES6
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables compatibility with Babel imports
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts)
    "sourceMap": true,
    "composite": true
  },
  "include": [
    "./src/**/*" // Location of your TypeScript files
  ],
  "exclude": [
    "node_modules" // Folders to exclude from compilation
  ]
}
